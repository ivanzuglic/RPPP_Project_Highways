@model RPPP12.Models.NaplatnaKucica
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Create_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="/racun">Računi</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/nacinPlacanja">Načini plaćanja</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/vrstaNaplatneKucice">Vrste naplatnih kućica</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/cjenik">Cjenik</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/kategorijaVozila">Kategorije vozila</a>
            </li>

        </ul>
    }
    @section container {
        <h4>NaplatnaKucica</h4>
        <hr />
        <div class="row">
            <div class="input-group mb-3">
                <form asp-action="Edit" asp-route-id="@Model.SifraKucica">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SifraKucica" />
                    <div class="form-group">
                        <label asp-for="SifraPostaja" class="control-label"></label>
                        <select asp-for="SifraPostaja" class="form-control" asp-items="ViewBag.SifraPostaja"></select>
                        <span asp-validation-for="SifraPostaja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraBlagajnika" class="control-label"></label>
                        <select asp-for="SifraBlagajnika" class="form-control" asp-items="ViewBag.SifraBlagajnika"></select>
                        <span asp-validation-for="SifraBlagajnika" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VrstaNaplatneKucice" class="control-label"></label>
                        <select asp-for="VrstaNaplatneKucice" class="form-control" asp-items="ViewBag.VrstaNaplatneKucice"></select>
                        <span asp-validation-for="VrstaNaplatneKucice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        }
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
