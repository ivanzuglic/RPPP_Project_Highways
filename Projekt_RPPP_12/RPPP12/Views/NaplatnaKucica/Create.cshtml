@model RPPP12.Models.NaplatnaKucica
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Create_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Create</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="/racun">Računi</a>
            </li>

        </ul>
    }
    @section container {
        <h4>NaplatnaKucica</h4>
        <hr />
        <div class="row" style="margin-left:20px;">
            <div class="input-group mb-3">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SifraPostaja" class="control-label"></label>
                        <select asp-for="SifraPostaja" class="form-control" asp-items="ViewBag.SifraPostaja"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraBlagajnika" class="control-label"></label>
                        <select asp-for="SifraBlagajnika" class="form-control" asp-items="ViewBag.SifraBlagajnika"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="VrstaNaplatneKucice" class="control-label"></label>
                        <select asp-for="VrstaNaplatneKucice" class="form-control" asp-items="ViewBag.VrstaNaplatneKucice"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        }
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
