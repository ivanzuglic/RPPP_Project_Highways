@model RPPP12.Models.Stanje

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Stanje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SifraStanje" />
            <div class="form-group">
                <label asp-for="VrijemeZavrsetka" class="control-label"></label>
                <input asp-for="VrijemeZavrsetka" class="form-control" />
                <span asp-validation-for="VrijemeZavrsetka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SifraDogadaj" class="control-label"></label>
                <select asp-for="SifraDogadaj" class="form-control" asp-items="ViewBag.SifraDogadaj"></select>
                <span asp-validation-for="SifraDogadaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SifraZabrana" class="control-label"></label>
                <select asp-for="SifraZabrana" class="form-control" asp-items="ViewBag.SifraZabrana"></select>
                <span asp-validation-for="SifraZabrana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
