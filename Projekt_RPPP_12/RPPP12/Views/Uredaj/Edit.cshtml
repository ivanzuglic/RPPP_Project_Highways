@model RPPP12.Models.Uredaj
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Create_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="/scenarij">Scenariji</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/alarm">Alarmi</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/kategorijaScenarija">Kategorije scenarija</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="/vrstaUredaja">Vrste uređaja</a>
            </li>

        </ul>
    }
    @section container {
        <h4>Uredaj</h4>
        <hr />
        <div class="row">
            <div class="input-group mb-3">
                <form asp-action="Edit" asp-route-id="@Model.SifraUredaja">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SifraUredaja" />
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraObjekta" class="control-label"></label>
                        <select asp-for="SifraObjekta" class="form-control" asp-items="ViewBag.SifraObjekta"></select>
                        <span asp-validation-for="SifraObjekta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraVrsteUredaja" class="control-label"></label>
                        <select asp-for="SifraVrsteUredaja" class="form-control" asp-items="ViewBag.SifraVrsteUredaja"></select>
                        <span asp-validation-for="SifraVrsteUredaja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    }
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
