@model IEnumerable<RPPP12.Models.Dogadaj>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatumVrijeme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SifraDionica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SifraRazinaOpasnostiNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumVrijeme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SifraDionica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SifraRazinaOpasnostiNavigation.NazivRazinaOpasnosti)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SifraDogadaj">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SifraDogadaj">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SifraDogadaj">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
