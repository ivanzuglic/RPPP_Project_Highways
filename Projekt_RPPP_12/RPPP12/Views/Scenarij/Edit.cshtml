@model RPPP12.Models.Scenarij
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Create_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="~/scenarij">Scenariji</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/alarm">Alarmi</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/kategorijaScenarija">Kategorije scenarija</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/vrstaUredaja">Vrste uređaja</a>
            </li>

        </ul>
    }
    @section container {
        <h4>Scenarij</h4>
        <hr />
        <div class="row">
            <div class="input-group mb-3">
                <form asp-action="Edit" asp-route-id="@Model.SifraScenarija">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SifraScenarija" />
                    <div class="form-group">
                        <label asp-for="NazivScenarija" class="control-label"></label>
                        <input asp-for="NazivScenarija" class="form-control" />
                        <span asp-validation-for="NazivScenarija" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Procedura" class="control-label"></label>
                        <input asp-for="Procedura" class="form-control" />
                        <span asp-validation-for="Procedura" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraVrsteObjekta" class="control-label"></label>
                        <input asp-for="SifraVrsteObjekta" class="form-control" />
                        <span asp-validation-for="SifraVrsteObjekta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraVrsteScenarija" class="control-label"></label>
                        <select asp-for="SifraVrsteScenarija" class="form-control" asp-items="ViewBag.SifraVrsteScenarija"></select>
                        <span asp-validation-for="SifraVrsteScenarija" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        }
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
