@model RPPP12.Models.Alarm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Create_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="~/scenarij">Scenariji</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/alarm">Alarmi</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/kategorijaScenarija">Kategorije scenarija</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/vrstaUredaja">Vrste uređaja</a>
            </li>

        </ul>
    }
    @section container {
        <h4>Alarm</h4>
        <hr />
            <div class="input-group mb-3">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SifraUredaja" class="control-label"></label>
                        <select asp-for="SifraUredaja" class="form-control" asp-items="ViewBag.SifraUredaja"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraDogadaja" class="control-label"></label>
                        <select asp-for="SifraDogadaja" class="form-control" asp-items="ViewBag.SifraDogadaja"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraScenarija" class="control-label"></label>
                        <select asp-for="SifraScenarija" class="form-control" asp-items="ViewBag.SifraScenarija"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraOperatera" class="control-label"></label>
                        <input asp-for="SifraOperatera" class="form-control" />
                        <span asp-validation-for="SifraOperatera" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        }
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
