@model RPPP12.Models.Dionica
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Delete</title>
</head>
<body>

    
    <div>
        <h4>Dionica</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Naziv)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Naziv)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Duljina)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Duljina)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SifraAutocesteNavigation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SifraAutocesteNavigation.ImeAutoceste)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SifraKrajaNavigation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SifraKrajaNavigation.NazivLokacije)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SifraPocetkaNavigation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SifraPocetkaNavigation.NazivLokacije)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SifraDionice" />
            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Delete</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Delete</h4>
                        </div>
                        <div class="modal-body">
                            <p>Želite li sigurno obrisati stavku?</p>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Delete" class="btn btn-default" />
                            <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
                        </div>
                    </div>
                </div>
            </div> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</body>
</html>
