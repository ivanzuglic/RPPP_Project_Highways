@model RPPP12.Models.Dionica
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="~/objekt">Objekti</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/vrstaObjekta">Vrste objekata</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/lokacijaPostaje">Lokacije postaja</a>
            </li>
        </ul>
    }
    @section container {
        <div>
            <h4>Dionica</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Naziv)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Naziv)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Duljina)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Duljina)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SifraAutocesteNavigation)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SifraAutocesteNavigation.ImeAutoceste)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SifraKrajaNavigation)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SifraKrajaNavigation.NazivLokacije)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SifraPocetkaNavigation)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SifraPocetkaNavigation.NazivLokacije)
                </dd>
                <dt>
                    Objekti
                </dt>
                <dd>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Dionica
                                </th>
                                <th>
                                    Vrsta objekta
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Objekt)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SifraDioniceNavigation.Naziv)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SifraVrstaObjektaNavigation.NazivObjekta)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.SifraDionice">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
     }
    </body>
</html>
