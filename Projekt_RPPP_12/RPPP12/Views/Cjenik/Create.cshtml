@model RPPP12.Models.Cjenik
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Create_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @section side_nav{
        <ul class="list-group">
            <li class="list-group-item">
                <a class="nav-link" href="~/racun">Računi</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/nacinPlacanja">Načini plaćanja</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/vrstaNaplatneKucice">Vrste naplatnih kućica</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/cjenik">Cjenik</a>
            </li>
            <li class="list-group-item">
                <a class="nav-link" href="~/kategorijaVozila">Kategorije vozila</a>
            </li>

        </ul>
    }
    @section container {
        <h4>Cjenik</h4>
        <hr />
        <div class="row">
            <div class="input-group mb-3">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SifraKucica" class="control-label"></label>
                        <select asp-for="SifraKucica" class="form-control" asp-items="ViewBag.SifraKucica"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SifraKategorijaVozila" class="control-label"></label>
                        <select asp-for="SifraKategorijaVozila" class="form-control" asp-items="ViewBag.SifraKategorijaVozila"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cijena" class="control-label"></label>
                        <input asp-for="Cijena" class="form-control" />
                        <span asp-validation-for="Cijena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        }
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
