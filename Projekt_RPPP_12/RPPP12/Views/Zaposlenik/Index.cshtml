@model IEnumerable<RPPP12.Models.Zaposlenik>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prezime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SifraPostajeNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SifraVrsteZaposlenikaNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SifraPostajeNavigation.SifraPostaje)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SifraVrsteZaposlenikaNavigation.Naziv)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SifraZaposlenika">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.SifraZaposlenika">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.SifraZaposlenika">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
